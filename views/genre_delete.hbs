{{> header}}
<body class="grid-container">
	{{> sidebar}}
	<div>
		<h1>{{title}}</h1>
		<h2>{{genre}}</h2>
		{{#if genre_books}}
			<p>You must delete the books below before you can delete this genre.</p>
			<span>|</span>
			{{#each genre_books}}
				<a href="{{this.url}}">{{this.title}}</a>
				<span>|</span>
			{{/each}}
		{{else}}
			<p>Are you sure you want to delete this genre?
			<form method="POST" action="">
				<input type="submit">
			</form>
		{{/if}}
	</div>
</body>
